<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 文件输出格式 -->
    <property name="PATTERN" value="%-12(%d{yyyy-MM-dd HH:mm:ss.SSS}) |-%-5level [${spring.zipkin.service.name:${spring.application.name:-}},%X{X-B3-TraceId:-},%X{X-B3-SpanId:-},%X{X-Span-Export:-}] [%thread] %c [%L] -| %msg%n"/>

    <property name="PATTERN"
              value="%-12(%d{yyyy-MM-dd HH:mm:ss.SSS}) |- %-5level [%thread]  [%X{X-B3-TraceId:-},%X{X-B3-SpanId:-}] %c [%L] -| %msg%n" />

    <springProperty scope="context" name="appLogRootDir"
                    source="appLogRootDir"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>


    <appender name="ROOT_LOG_FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 文件路径 -->
        <file>${appLogRootDir}/root.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${appLogRootDir}/root_%i.log
            </fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>3</maxIndex>
        </rollingPolicy>

        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>10MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 开发环境 -->
    <springProfile name="!online">
        <root level="info">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ROOT_LOG_FILE_APPENDER"/>
        </root>
    </springProfile>
    <!-- 测试环境 -->
    <springProfile name="online">
        <root level="info">
            <appender-ref ref="ROOT_LOG_FILE_APPENDER"/>
        </root>
    </springProfile>

</configuration>
